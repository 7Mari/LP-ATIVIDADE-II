#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>

int main() {
    setlocale(LC_ALL ,"portuguese");
    
    int idade;
    
    printf("Informe sua idade: ");
    scanf("%i" ,&idade);
    system("cls || clear");
    
    //Permitido ou Negado
    printf("Idade Informada: %i \n" ,idade);
    
    if (idade >= 18) {
        printf("Acesso Permitido");
    } else {
        printf("Acesso Negado");
    }
    
    
    return 0;
}
