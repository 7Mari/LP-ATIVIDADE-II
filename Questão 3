#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>

int main() {
    setlocale(LC_ALL ,"portuguese");
    
    float nota;
    
    printf("Digite a Nota do aluno: ");
    scanf("%f" ,&nota);
    system("cls || clear");
    //declarar classificação
    
    printf("Nota do Aluno: %.1f \n" ,nota);
    
    if (nota >= 9){
        printf("Excelente!");
    }else if(nota >= 7) {
        printf("Bom!");
    }else if(nota >= 5) {
        printf("Razoável!");
    }else{
        printf("Insuficiente!");
    }
    
    
    
    return 0;
}
